<h1>詳細画面</h1>
<div class="table-responsive">

	<table class="table table-bordered">

		<thead>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th>Image</th>
				<th></th>
				<th></th>
			</tr>
		</thead>

		<tbody>
			<tr>
				<td><%=@negishi.title%></td>
				<td><%=@negishi.body%></td>
				<td><%=attachment_image_tag @negishi, :image, format: 'jpeg', size:'100x100', class:"profile_image", fallback:"no-image.jpg", size:'100x100'%></td>

				<td><div class="btn-group-vertical btn-group-lg">
					<%=link_to '', edit_negish_path(@negishi),class: "btn btn-success btn-sm active glyphicon glyphicon-wrench" %>
					<%=link_to '投稿一覧', negishes_path,class:"btn btn-success btn-sm active"%>
					<%=link_to '削除', negish_path(@negishi), method: :delete, "data-confirm" => "本当に削除しますか？",class:"btn btn-success btn-sm active" %>
				</div></td>
				<td></td>
			</tr>
		</tbody>

	</table>

</div>
