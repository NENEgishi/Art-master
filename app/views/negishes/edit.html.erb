<h1>編集画面</h1>
<%=form_for @negishi, url:negish_path(@negishi.id) do |k| %>

<table class="table table-striped">

	<tr><th>Title</th></tr>
	<tr><td><%=k.text_field :title%></td></tr>

	<tr><th>Body</th></tr>
	<tr><td><%=k.text_area :body%></td></tr>

	<tr><th>Image</th></tr>
	<tr><td><%=k.attachment_field :image%></td></tr>
	
	<tr><td><%=k.submit '保存',class:"btn btn-primary btn-sm active"%></td></tr>

	<tr><td><%=link_to '投稿一覧', negishes_path,class:"btn btn-primary btn-sm active"%></td></tr>

</table>

<% end %>

